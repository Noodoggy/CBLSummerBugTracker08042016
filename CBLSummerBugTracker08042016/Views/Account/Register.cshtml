@model CBLSummerBugTracker08042016.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Register";
}

<div class="register-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <div class="hpanel">
                    <div class="panel-body">
                        <form action="#" id="loginForm">
                            <div class="row col-md-10 col-md-offset-1">

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) { }
                                @Html.AntiForgeryToken()
                                <h4>Create a new account.</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(m => m.FirstName, new { @class = "control-label, col-md-3"})
                                        <div>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                        </div>
                                    </div>


                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(m => m.LastName, new { @class = "control-label, col-md-3" })
                                        <div>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(m => m.DisplayName, new { @class = "control-label, col-md-3" })
                                        <div>
                                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                                        </div>
                                    </div>


                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label, col-md-3" })
                                        <div>
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label, col-md-3" })
                                        <div>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label, col-md-3" })
                                        <di>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label, col-md-3" })
                                        <div>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="text-center">
                                    <input type="submit" class="btn btn-success btn-block " value="Register" />
                                </div>
                            </div>
                        </form>
                                </div>
                            
                    </div>
                </div>
            </div>
            </div>
        </div>
  
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
