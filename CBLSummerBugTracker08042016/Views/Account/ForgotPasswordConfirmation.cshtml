@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>@ViewBag.Title</h3>

            </div>
            <div class="hpanel">
                <div class="panel-body" style="text-align:center">
                    <div>
                        <p>
                            Please check your email to reset your password.
                        </p>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>