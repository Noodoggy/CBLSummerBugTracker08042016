@model CBLSummerBugTracker08042016.Models.CodeFirst.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt>
            @Html.DisplayNameFor(model =>model.Ticket)
        </dt>
        
           @{ var counter = 1;}
                    @foreach (var item in Model.Ticket)
                    {

                    <dd>
                        <b>Ticket #@counter</b>
                    
                    Description: @item.Description
                </dd>
                <dd>
                    Assigned to: @item.AssignedToUser.DisplayName
                 </dd>
                 <dd>
                     Ticket Owner: @item.OwnerUser.DisplayName   

                </dd>
                counter++;
                    }
       
    </dl>
</div>
<p>

    @Html.ActionLink("Edit Assigned Users", "EditAssignedProjectUsers", new { id = Model.Id }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
