@model CBLSummerBugTracker08042016.Models.CodeFirst.ProjectUserListViewModel

<h2>EditAssignedUsers</h2>



@{
    ViewBag.Title = "Edit Project Users";
}

<h2></h2>

@using (Html.BeginForm("EditAssignedProjectUsers", "Projects", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ProjectName)
    <div class="row">
        <div class="col-md-4">@Model.ProjectName</div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">

                    @Html.ListBox("selected", Model.users)
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Assign To Project" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        @Html.ActionLink("Back to Projects", "Index")
    </div>
}