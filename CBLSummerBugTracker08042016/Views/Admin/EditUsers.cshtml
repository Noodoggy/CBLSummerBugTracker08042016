@using (Html.BeginForm("EditUsers", "Admin", FormMethod.Post))
{
    <div class="normalheader transition animated fadeIn">
        <div class="hpanel">
            <div class="panel-body">
                <a class="small-header-action" href="">
                    <div class="clip-header">
                        <i class="fa fa-arrow-up"></i>
                    </div>
                </a>

                <div id="hbreadcrumb" class="pull-right m-t-lg">
                    <ol class="hbreadcrumb breadcrumb">
                        <li><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
                        <li>
                            <a href="@Url.Action("Index", "Admin")">Admin</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ListUsers", "Admin")">List Users</a>
                        </li>
                        <li class="active">
                            <span>Edit Users</span>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    Edit User Roles
                </h2>
                <small>single or multiple roles</small>
            </div>
        </div>
    </div>


    <div class="col-sm-6 col-sm-offset-3">
        <div class="hpanel plan-box hgreen active">
            <div class="panel-heading hbuilt text-center">
                <h4 class="font-bold">@Model.Name</h4>
            </div>
            <div class="panel-body">
                <p class="text-muted">
                    select roles to add user to, shift for group select, control for precise select
                </p>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-3">

                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">

                                    @Html.ListBox("selected", Model.roles)
                                </div>
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Assign To Role" class="btn btn-success btn-sm m-t-xs" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           </div>
        </div>
}